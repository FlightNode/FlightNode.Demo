{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  // camel case is great, but too many 3rd parties
  // use snake_case instead.
  "camelcase": false,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "single",
  "undef": true,
  "unused": true,
  "strict": true,
  "trailing": true,
  "smarttabs": true,
  "globals": {
    "angular": true,
    "moment": true,
    "_": true
  }
}
